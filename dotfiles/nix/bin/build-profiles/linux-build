#!/bin/sh

GREEN='\033[1;32m'
RED='\033[1;31m'
CLEAR='\033[0m'

profile() {
        echo "${GREEN}Building profile for $PROFILE...${CLEAR}"
        ( home-manager switch --experimental-features "nix-command flakes" --flake ~/nix/#$(hostnamectl --pretty) ||
          nix --experimental-features "nix-command flakes" run home-manager/release-23.11 -- switch --flake ~/nix/#$(hostnamectl --pretty) ) &&
                echo "${GREEN}Finished building profile!${CLEAR}" ||
                echo "${RED}Build Error${CLEAR}"
}

profile
