#!/bin/sh

GREEN='\033[1;32m'
RED='\033[1;31m'
CLEAR='\033[0m'

profile() {
        echo "${GREEN}Building profile for $PROFILE...${CLEAR}"
        nixos-rebuild --experimental-features "nix-command flakes" --flake .#$(hostnamectl --pretty) &&
                echo "${GREEN}Finished building profile!${CLEAR}" ||
                echo "${RED}Build Error${CLEAR}"
}

profile
